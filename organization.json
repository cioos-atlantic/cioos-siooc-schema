{
  "scheming_version": 1,
  "organization_type": "organization",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "form_languages": ["fr", "en"],
  "fields": [
    {
      "field_name": "title_translated",
      "preset": "fluent_core_translated",
      "label": {
        "fr": "Titre",
        "en": "Title"
      },
      "form_attrs": {"data-module": "slug-preview-target"},
      "form_placeholder": {
        "fr": "Mon organisation",
        "en": "My Organization"
      }
    },
    {
      "field_name": "name",
      "label": "URL",
      "validators": "not_empty unicode name_validator group_name_validator",
      "form_snippet": "slug.html",
      "form_placeholder": "my-organization"
    },
    {
      "field_name": "description_translated",
      "preset": "fluent_markdown",
      "label": "Description",
      "form_placeholder": {
        "fr": "Quelques informations Ã  propos de mon organisation...",
        "en": "A little information about my organization..."
      }
    },
    {
      "field_name": "not_used",
      "label": "Parent organization",
      "display_snippet": null,
      "form_snippet": "org_hierarchy.html",
      "validators": "ignore_missing"
    },
    {
      "field_name": "image_url_translated",
      "preset": "fluent_link",
      "label": {
        "fr": "URL de l'image",
        "en": "Image URL"
      },
      "form_placeholder": {
        "fr": "http://exemple.com/mon-image.jpg",
        "en": "http://example.com/my-image.jpg"
      }
    },
    {
      "field_name": "external_home_url",
      "label": "External Home Page URL"
    }
  ]
}
